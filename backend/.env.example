# Django Backend Environment Variables
# Copy this file to .env and fill in your actual values

# SECURITY WARNING: Generate a new secret key for production!
# You can generate one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-must-be-at-least-50-characters-long-for-security

# Debug mode - MUST be False in production
DEBUG=False

# Allowed hosts - comma-separated list of domains
# Example: ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-app.onrender.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Database URL (Render provides this automatically)
# Format: postgres://user:password@host:port/database
DATABASE_URL=

# Frontend URL for CORS (your Vercel deployment)
FRONTEND_URL=https://intern-technical-assignment.vercel.app

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# SSL Redirect (set to False for local development without HTTPS)
SECURE_SSL_REDIRECT=True
